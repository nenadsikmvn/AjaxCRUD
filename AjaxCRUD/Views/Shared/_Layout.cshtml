<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -ASP.CRUD.OPERATIONS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body>
    <div id="st-navbar-desktop-wrapper" class="st-navbar-desktop-wrapper st-navbar-desktop-fixed">
        <div class="st-navbar-desktop">
            <div class="container">
                <div class="st-navbar-desktop-logo">
                    <a class="st-navbar-desktop-logo-link" href="@Url.Action("Index", "Students")"> <img src="~/Content/img/student.svg" style="height:50px; padding-left:-300px; width:500px;"></a>
                </div>
                <nav class="st-navbar-desktop-menu" role="navigation">
                    <ul id="st-navbar-desktop-menu-nav" class="sf-menu">
                        <li>@Html.ActionLink("Home", "Index", "Students")</li>
                        <li> @Html.ActionLink("Students", "Index", "Students")   </li>

                                <li>@Html.ActionLink("Grades", "Index", "Grades")</li>
                          
                        <li><a href="#">Teachers</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="container" style="margin-top:110px;">
        <div class="jumbotron">
            @RenderBody()
        </div>
    </div>

    <div class="container" style="height:460px;"></div>

    <div class="container body-content">
        <hr />
        <footer>
            <p>AJAX CRUD MVC Tasks</p>
        </footer>
    </div>

    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>









    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <script src="~/Scripts/Scripts.js"></script>
    <script src="~/Scripts/notify.min.js"></script>

</body>
</html>