@model AjaxCRUD.Models.Grade
@{
    ViewBag.Title = "AddOrEdit";
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "Grades", FormMethod.Post, new { enctype = "multipart/form-data", onSubmit = "return jqPost(this);", data_restUrl = Url.Action("AddOrEdit", "Grades", new { id = 0 }) }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.GradeId)


            <div class="form-group">
          
                <div class="col-md-10">
                    @Html.LabelFor(model => model.Grade1)
                    @Html.EditorFor(model => model.Grade1, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Grade1 } })
                    @Html.ValidationMessageFor(model => model.Grade1)
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    @Html.LabelFor(model => model.TeacherId)
                    @Html.DropDownList("TeacherId", null, htmlAttributes: new { @class = "form-control input-lg" })
                    @Html.ValidationMessageFor(model => model.TeacherId, "", new { @class = "text-info" })
                </div>
            </div>


            <div class="form-group">
          
                <div class="col-md-10">
                    @Html.LabelFor(model => model.StudentId)
                    @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                </div>
            </div>

    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default btn-lg" />
                    @if (Model.GradeId != 0)
                    {
                        <a class="btn btn-success btn-lg" onclick="AddNewTab('@Url.Action("AddOrEdit","Grades",new{id=0})',false)"><i class="fa fa-plus"></i> Add new Grade</a>
                    }
                </div>
            </div>

        </div>





        </div>
       
  
}